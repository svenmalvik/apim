<choose>
		<when condition="@(true)">
				<!--    GET - Request Forward time    -->
				<set-variable name="ReqFwdTime" value="@(System.DateTime.Now)" />
				<choose>
						<when condition="@(context.Variables.GetValueOrDefault&lt;bool&gt;(&quot;isAks&quot;))">
								<set-backend-service base-url="{{AKSBackendUrl}}" />
						</when>
				</choose>
				<forward-request />
		</when>
</choose>